<!DOCTYPE html>
<html lang="en">
<head>
    <title>Devices</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('navbar') %>
    <div class="container">
        <h1 style="color:#587d71">Devices</h1>
        <form action="/add_device" method="POST">
            <input type="text" name="name" placeholder="Device Name" required>
            <input type="text" name="type" placeholder="Device Type" required>
            <button type="submit">Add Device</button>
        </form>
        <ul>
            <% devices.forEach(device => { %>
                <li>
                    <%= device.name %> - Status: <%= device.status %>
                    <form action="/toggle_device/<%= device.id %>" method="POST">
                        <button type="submit">Toggle Status</button>
                    </form>
                </li>
            <% }) %>
        </ul>
    </div>
</body>
</html>
